<%- include('../partials/header') %>
<h2>Edit Expense</h2>
<form action="/expenses/<%= expense._id %>?_method=PUT" method="POST">
  <div class="mb-3"><label class="form-label">Amount</label><input name="amount" type="number" step="0.01" value="<%= expense.amount %>" class="form-control" required></div>
  <div class="mb-3"><label class="form-label">Category</label><input name="category" value="<%= expense.category %>" class="form-control" required></div>
  <div class="mb-3"><label class="form-label">Description</label><input name="description" value="<%= expense.description %>" class="form-control"></div>
  <div class="mb-3"><label class="form-label">Date</label><input name="date" type="date" value="<%= new Date(expense.date).toISOString().substr(0,10) %>" class="form-control"></div>
  <button class="btn btn-primary">Update</button>
</form>
<%- include('../partials/footer') %>
